    $term_collection = Term::create([
      'uuid' =>  "f4a60b73-cf2d-4e3f-a1c8-34b2dd33dfc3",
      'name' => 'Example Collection Type',
      'vid' => 'collection_type',
      'parent' => [],
    ]);
    $term_collection->save();
